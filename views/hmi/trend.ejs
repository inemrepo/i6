<% block('localScripts', '<script language="javascript" type="text/javascript" src="/i6/i6.trend.js"></script>') %>

<div class="row">
    <div class="box box-primary">
        <div class="box-header"><h3 class="box-title">Trending</h3></div>
        <div class="bo-body">
            <div class="col-sm-12">
                <div id="i6-trend" style="height:400px;"></div>
            </div>
            <div class="col-sm-12 text-center">
                <div id="trendControl" class="btn-group" data-toggle="btn-toggle">
                    <button i6-ctrl="fast-backward" class="btn btn-default" title="Fast Backward"><i class="fa fa-fast-backward"></i></button>
                    <button i6-ctrl="backward" class="btn btn-default" title="Backward"><i class="fa fa-backward"></i></button>
                    <button i6-ctrl="play" class="btn btn-primary" title="Realtime Update" data-toggle="on"><i class="fa fa-play"></i></button>
                    <button i6-ctrl="pause" class="btn btn-default" title="Pause Realtime" data-toggle="off"><i class="fa fa-pause"></i></button>
                    <button i6-ctrl="forward" class="btn btn-default" title="Forward"><i class="fa fa-forward"></i></button>
                    <button i6-ctrl="fast-forward" class="btn btn-default" title="Fast Forward"><i class="fa fa-fast-backward"></i></button>
                </div>
                <input class="pull-right" id="updateInterval" title="Update Interval (ms)" type="number" value="500" max="2000" min="100">
                
            </div>
        </div>
        <style type="text/css">
            div.color-box-sm{
                height: 20px;
                width: 20px;
            }
        </style>
        <div class="box-footer">
            <div class="col-sm-12">
                <h4>Legend</h4>
            </div>
            <div class="col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Series</th>
                            <th>Tag</th>
                            <th>Description</th>
                            <th>Time</th>
                            <th>Value</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" class="col-sm-2"><div class="color-box-sm bg-yellow col-sm-2"></div></td>
                            <td>Opacity</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="col-sm-2"><div class="color-box-sm bg-primary col-sm-2"></div></td>
                            <td>Particulate</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="col-sm-2"><div class="color-box-sm bg-yellow col-sm-2"></div></td>
                            <td>Flow Gas Stack</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="col-sm-2"><div class="color-box-sm bg-yellow col-sm-2"></div></td>
                            <td>NOx</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>