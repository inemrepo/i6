<!--
	Local helpers
-->
<% block('localCSS', '<link rel="stylesheet" href="/plugins/datatables/datatables.min.css">') %>
<% block('localScripts', '<script src="/plugins/datatables/datatables.min.js"></script>') %>
<% block('localScripts', '<script src="/i6/i6.js"></script>') %>

<div class="row">
	<div class="col-md-12">
		<div class="box">
			<div class="box-body">
			<table id="example" class="display i6-crud" cellspacing="0" width="100%">
		        <thead>
		            <tr>
		                <th data-src="name">Name</th>
		                <th data-src="type.name">Driver</th>
		                <th data-src="host">Host/IP Address</th>
		                <th data-src="port">Port</th>
		                <th data-src="rack">Rack</th>
		                <th data-src="slot">Slot</th>
		                <th data-src="enabled">Enabled</th>
		                <th >Action</th>
		            </tr>
		        </thead>
		        <!-- <tfoot>
		            <tr>
		                <th>Name</th>
		                <th>Device</th>
		                <th>Address</th>
		                <th>Action</th>
		            </tr>
		        </tfoot> -->
		        <tbody>
		        </tbody>
		    </table>
			</div>			
		</div>		
	</div>
</div>


<!-- Modal untuk menampilkan detail -->
<div class="modal fade" id="modal-detail" role="dialog">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
		<div class="col-md-12 well">
		  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		  <h3 style="display:block; text-align:center;"><i class="fa fa-info-circle"></i> Detail Tag </h3>

		  <div class="box box-body">
				<ul class="nav nav-stacked">
					<li>Name <span class="pull-right" i6detail="name"></span></li>
					<li>Driver <span class="pull-right" i6detail="type"></span></li>
					<li>Host/IP Address <span class="pull-right" i6detail="host"></span></li>
					<li>Port <span class="pull-right" i6detail="port"></span></li>
					<li>Rack <span class="pull-right" i6detail="rack"></span></li>
					<li>Slot <span class="pull-right" i6detail="slot"></span></li>
					<li>Enabled <span class="pull-right" i6detail="enabled"></span></li>
					<li>Description <span class="pull-right" i6detail="description"></span></li>
				</ul>
		  </div>

		  <div class="text-right">
		    <button class="btn btn-warning" data-dismiss="modal"> Edit</button>
		    <button class="btn btn-default" data-dismiss="modal"> Close</button>
		  </div>
		</div>
    </div>
  </div>
</div>
<!-- /Modal untuk menampilkan detail -->



<!-- Modal untuk edit data -->
<div class="modal fade" id="modal-edit" role="dialog">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
		<div class="col-md-12 well">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h3 style="display:block; text-align:center;" class="hidden"><i class="fa fa-edit"></i> Edit Device </h3>
			<h3 style="display:block; text-align:center;"><i class="fa fa-add"></i> Create New Device </h3>
			<div class="box">
		    	<form class="form-horizontal" id="form-update">
					<div class="box-body">
						<div class="form-group">
							<label for="name" class="col-sm-3 control-label">Name</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="name" placeholder="Device Name">
							</div>
						</div>

						<div class="form-group">
							<label for="type" class="col-sm-3 control-label">Driver</label>
							<div class="col-sm-9">
								<select class="form-control select2" name="type" placeholder="I/O Device">
									<option >-- Select driver type --</option>
									<% drivers.forEach(driver=>{ %>
									<option value="<%= driver.id %>"><%= driver.name %></option>
									<% }); %>
								</select>
							</div>
						</div>

						<div class="form-group">
							<label for="host" class="col-sm-3 control-label">Host/IP Address</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="host" placeholder="Device IP Address">
							</div>
						</div>

						<div class="form-group">
							<label for="port" class="col-sm-3 control-label">Port</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="port" placeholder="Port Number">
							</div>
						</div>

						<div class="form-group">
							<label for="rack" class="col-sm-3 control-label">Rack</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="rack" placeholder="Rack Number">
							</div>
						</div>

						<div class="form-group">
							<label for="slot" class="col-sm-3 control-label">Slot</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="slot" placeholder="Slot Number">
							</div>
						</div>

						<div class="form-group">
							<label for="slot" class="col-sm-3 control-label">Enabled</label>
							<div class="col-sm-9">
								<input type="hidden" class="form-control" name="enabled" value="false">
								<div class="btn-group"><button class="btn btn-success">Enabled</button><button class="btn btn-success">Disabled</button></div>
							</div>
						</div>
					</div>
					<!-- /.box-body -->
					<div class="box-footer">
						<button type="submit" class="btn btn-info pull-right">Save</button>
					</div>
					<!-- /.box-footer -->
				</form>
			</div>
		</div>
    </div>
  </div>
</div>
<!-- /Modal untuk edit data -->


<script>
	document.addEventListener("DOMContentLoaded", function(){
		(function($){
			$.fn.i6Switch = function(){
				$(this).addClass('hidden');
			};
		})(jQuery);

		$('.btn-success').i6Switch();
	});
</script>